<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="572dp"
            android:id="@+id/btnStart" tools:text="@string/button_start" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnStop"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStop"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnStart" tools:text="@string/Button_Stop"
            app:layout_constraintStart_toEndOf="@+id/btnStart" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <EditText
            android:layout_width="233dp"
            android:layout_height="64dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/button"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="179dp"
            app:layout_constraintBottom_toTopOf="@+id/btnStop" android:layout_marginTop="278dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="@string/edit_restaurant"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.058"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText" android:text="@string/button_send"
            app:layout_constraintStart_toEndOf="@+id/editText" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="62dp"
            tools:layout_editor_absoluteX="89dp" android:id="@+id/textView" tools:text="@string/textView_Start"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="88dp"/>

</android.support.constraint.ConstraintLayout>